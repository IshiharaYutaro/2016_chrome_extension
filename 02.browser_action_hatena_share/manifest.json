{
  "name": "browser_action_facebook_share",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Hatenaブックマークのコメント数。", 
"permissions" : [
    "tabs",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
        "128": "img/icon_128.png",
        "48":  "img/icon_48.png",
        "16":  "img/icon_16.png"
    },
    "background" : {
    "scripts" : ["background.js"]
  },
  "browser_action": {
    "default_icon": "img/icon_16.png",
    "default_title": "browser_action_Hatena_share",
    "default_popup": "popup.html"
  }
  }